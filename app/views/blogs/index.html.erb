<h1>Listing blogs</h1>
<h2>Blogs</h2>
<center>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= blog.title.html_safe%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</center>
<br>

<%= link_to '新しいブログを作成', new_blog_path %>
